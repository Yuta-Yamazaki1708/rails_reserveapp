<h3>再予約する</h3>

<div>
  <%= image_tag @reservation.room.image.variant(resize:'200x200') %>
  <p><%= @reservation.room.name %></p>
  <p><%= @reservation.room.price %></p>
  <p><%= @reservation.room.address %></p>
  <p><%= @reservation.room.introduction %></p>
  </div>

<%= form_with model: @reservation do |f| %>
<table>
  <tr>
    <th><%= f.label :start_at ,"チェックイン" %></th>
    <td><%= f.date_field :start_at %></td>
  </tr>
 
  <tr>
    <th><%= f.label :end_at ,"チェックアウト" %></th>
    <td><%= f.date_field :end_at %></td>
  </tr>
 
  <tr>
    <th><%= f.label :num_people ,"人数" %></th>
    <td><%= f.number_field :num_people %></td>
  </tr>
</table>
<%= f.submit "登録" %>
<% end %>