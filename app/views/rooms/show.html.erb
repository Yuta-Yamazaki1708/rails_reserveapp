<h3>施設詳細</h3>
<% if @room.user_id == current_user.id %>
  <%= link_to "編集", edit_room_path(@room) %>
<% end %>
<table>
  <tr>
    <th>施設名</th>
    <th>画像</th>
    <th>住所</th>
    <th>紹介</th>
    <th>価格</th>
  </tr>
  <tr>
    <td><%= @room.name %></td>
    <td><%= image_tag @room.image.variant(resize: "500x500") %></td>
    <td><%= @room.address %></td>
    <td><%= @room.introduction %></td>
    <td><%= @room.price %></td>
  </tr>
</table>

<%= form_with model: @reservation, url: reservations_confirm_path, method: :post do |f| %>
<table>
  <tr>
    <th><%= f.label :start_at ,"チェックイン" %></th>
    <td><%= f.date_field :start_at %></td>
  </tr>
 
  <tr>
    <th><%= f.label :end_at ,"チェックアウト" %></th>
    <td><%= f.date_field :end_at %></td>
  </tr>
 
  <tr>
    <th><%= f.label :num_people ,"人数" %></th>
    <td><%= f.number_field :num_people %></td>
  </tr>
 
  
  <%= f.hidden_field :user_id, value: @user.id %>
  <%= f.hidden_field :room_id, value: @room.id %>
</table>
<%= f.submit "予約確認" %>
<% end %>
