<h3>施設登録</h3>

<% if @room.errors.any? %>
  <% @room.errors.full_messages.each do |message| %>
    <ul>
      <li><%= message %></li>
    </ul>
  <% end %>
<% end %>

<%= form_with model: @room do |f| %>
<table>
     <tr>
       <th><%= f.label :name ,"施設名" %></th>
       <td><%= f.text_field :name %></td>
     </tr>
 
     <tr>
       <th><%= f.label :introduction ,"施設詳細" %></th>
       <td><%= f.text_area :introduction %></td>
     </tr>
 
     <tr>
       <th><%= f.label :price ,"価格" %></th>
       <td><%= f.number_field :price %></td>
     </tr>
 
     <tr>
       <th><%= f.label :address ,"住所" %></th>
       <td><%= f.text_field :address %></td>
     </tr>
     <tr>
       <th><%= f.label :image ,"画像" %></th>
       <td><%= f.file_field :image %></td>
     </tr>
     <%= f.hidden_field :user_id, value: @user.id %>
   </table>
   <%= f.submit "登録" %>
   <% end %>