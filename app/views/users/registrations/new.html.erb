<div class="sign-wrapper row justify-content-center pd-sm-100">
  <div class="sign-container container-fluid col-sm-12 col-md-8">
    <h3 class="text-center">新規登録</h3>

    <div class="sign-form">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
      
      <div class="mb-4">
        <%= f.label "名前", class: "form-label" %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
      </div>

      <div class="mb-4">
        <%= f.label "メールアドレス", class: "form-label" %><br />
        <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="mb-4">
        <%= f.label "パスワード", class: "form-label" %><br />
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上で入力)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="mb-4">
        <%= f.label "確認用パスワード", class: "form-label" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="mb-4 gy-2 row justify-content-center">
        <%= f.submit "新しいアカウントを作成", class: "btn btn-primary col-8" %>
        <%= link_to "アカウントをお持ちの方はログイン", new_user_session_path, class: "btn btn-outline-primary col-8" %>
      </div>

      <div class="mb-4">
        
      </div>
      
      <% end %>
    </div>
  </div>
</div>
